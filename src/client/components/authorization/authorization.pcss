@import url("https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap");

.Authorization {
  display: flex;
  flex-direction: column;
  width: 300px;
  height: 336px;
  border-radius: 5px;
  position: relative;
  background: white;
  padding: 25px;
  box-sizing: border-box;
  z-index: 3;

  &-Wrap {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30px;
  }

  &-Title {
    text-align: center;
    margin: 10%;
    font-size: 18px;
    font-family: "Releway" sans-serif;
    font-weight: bold;
    font-style: normal;
  }
}

.Form {
  display: flex;
  flex-direction: column;
  &-Login {
    margin-bottom: 10%;
  }
  label {
    font-size: 12px;
    color: #666262;
    font-family: "Releway" sans-serif;
  }
  &-Help {
    margin: 5% 0;
  }

  &-Button {
    margin: 5% 0;

    button {
      display: block;
      width: 100%;
      height: 34px;
      padding: 0;
      margin: 0;
      border: none;
      border-radius: 10px;
    }
  }
}

.Button {
  &-Red {
    background: #ee3327;
    height: 33px;
    color: white;
    font-family: Raleway;
    font-style: normal;
    font-weight: bold;
    font-size: 14px;
    line-height: 16px;
  }
  &-Blue {
    background: #5754db;
    height: 33px;
    color: white;
    font-family: Raleway, sans-serif;
    margin: 0;
    padding: 0;
    border: 0;
    font-style: normal;
    font-weight: bold;
    font-size: 14px;
    line-height: 16px;
  }
}

.Help {
  &-Text {
    font-family: "Raleway" sans-serif;
    font-style: normal;
    font-weight: 600;
    font-size: 10px;
    line-height: 12px;
    a {
      text-decoration: none;
      color: black;
    }
  }
  &-Or {
    display: block;
    text-align: center;
    font-family: Raleway;
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 16px;
  }
}

.Input {
  border: 1px solid #000000;
  box-sizing: border-box;
  border-radius: 10px;
  height: 29px;
  padding: 5px;
  box-sizing: border-box;
  outline: none;
}

@media screen and (max-width: 500px) {
  .Authorization {
    &-Wrap{
      width: 100vw;
      margin-top: 0;
      align-items: baseline;
    }
    width: 100%;
    height: auto;
    margin: 110px 41px 10px 41px;
  }
}

@media screen and (max-width: 300px) {
  .Authorization {
    &-Wrap {
      width: 100%;
    }
  }
}
